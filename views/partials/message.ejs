<% if (currentUser && currentUser.isLogged === true) { %>
    <div class="input-container">
        <input type="text" id="postInput" placeholder="Write a message...">
    </div>
    <div class="button-container">
        <button id="postButton">Post</button>
    </div>
<% } else { %>
    <div class="subscribe-message-container">
        <span>Only subscribers can post. Please subscribe for free</span>
    </div>

    <div class="subscribe-container">
        <button onclick="signin()">Sign In</button>
    </div>
<% } %>

<script>
  function signin() {
    window.location.href = '/login';
  }

  const postButton = document.getElementById("postButton");
  const postInput = document.getElementById("postInput");

  if (postButton && postInput) {
    postButton.addEventListener("click", async () => {
      const content = postInput.value.trim();
      if (!content) return;

      try {
        const response = await fetch("/create_post", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ content }),
        });

        if (response.ok) {
          postInput.value = "";
          location.reload();
        } else {
          console.error("Post failed");
        }
      } catch (err) {
        console.error("Error sending post:", err);
      }
    });
  }
</script>
